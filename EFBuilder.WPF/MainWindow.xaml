<Window x:Class="EFBuilder.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EFBuilder Schema Designer" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top toolbar -->
        <Grid Grid.Row="0" Margin="10" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Content="Directory:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding SelectedDirectory}" Width="400" VerticalAlignment="Center" Margin="5" IsReadOnly="True"/>
                <Button Name="BrowseButton" Content="Browse..." Click="BrowseButton_Click" Margin="5" Padding="10,5"/>
                <Button Name="ScaffoldButton" Content="Scaffold DB..." Click="ScaffoldButton_Click" 
                        Margin="5" Padding="10,5" VerticalAlignment="Center"
                        ToolTip="Generate entity definitions from database connection"/>
            </StackPanel>
            
            <Button Grid.Column="1" Name="SettingsButton" Content="Settings..." Click="SettingsButton_Click" 
                    Margin="5" Padding="10,5" VerticalAlignment="Center"
                    ToolTip="Configure code generation settings for this directory"/>
        </Grid>
        
        <!-- Main content area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left panel - Entity list -->
            <GroupBox Grid.Column="0" Header="Entities" Margin="0,0,5,0">
                <DockPanel>
                    <!-- Buttons at the top -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <Button Name="AddEntityButton" Content="Add Entity" Click="AddEntityButton_Click" 
                                Margin="0,0,5,0" Padding="8,3" 
                                ToolTip="Save current entity and start a new one"/>
                    </StackPanel>
                    
                    <!-- Entity list fills remaining space -->
                    <ListBox ItemsSource="{Binding Entities}" 
                             SelectedItem="{Binding SelectedEntity}"
                             DisplayMemberPath="Name"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </DockPanel>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Gray"/>
            
            <!-- Right panel - Tabs -->
            <GroupBox Grid.Column="2" Header="Entity Designer" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TabControl Grid.Row="0">
                        <!-- Markdown tab -->
                        <TabItem Header="Markdown Source">
                            <DockPanel>
                                <!-- Save button at the top -->
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                                    <Button Name="SaveButton" Content="Save Entity" Click="SaveButton_Click" 
                                            Padding="10,3" 
                                            ToolTip="Save the current entity using the name from the first line"/>
                                </StackPanel>
                                
                                <!-- Text editor fills remaining space -->
                                <TextBox Name="MarkdownTextBox" 
                                         Text="{Binding MarkdownContent, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         AcceptsTab="True"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         LostFocus="MarkdownTextBox_LostFocus"/>
                            </DockPanel>
                        </TabItem>
                        
                        <!-- C# output tab -->
                        <TabItem Header="Generated C#">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBox Grid.Row="0"
                                         Text="{Binding CSharpContent, Mode=OneWay}"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                
                                <Button Grid.Row="1" 
                                        Name="CopyButton"
                                        Content="Copy to Clipboard"
                                        HorizontalAlignment="Right"
                                        Margin="5"
                                        Padding="10,5"
                                        Click="CopyButton_Click"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Status bar -->
                    <StatusBar Grid.Row="1">
                        <StatusBarItem>
                            <TextBlock Text="{Binding SelectedEntity.Name, StringFormat='Selected: {0}'}"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>