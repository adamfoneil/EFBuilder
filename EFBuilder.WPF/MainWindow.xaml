<Window x:Class="EFBuilder.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EFBuilder Schema Designer" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="LightGray">
            <Label Content="Directory:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SelectedDirectory}" Width="400" VerticalAlignment="Center" Margin="5" IsReadOnly="True"/>
            <Button Name="BrowseButton" Content="Browse..." Click="BrowseButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
        
        <!-- Main content area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left panel - Entity list -->
            <GroupBox Grid.Column="0" Header="Entities" Margin="0,0,5,0">
                <ListBox ItemsSource="{Binding Entities}" 
                         SelectedItem="{Binding SelectedEntity}"
                         DisplayMemberPath="Name"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Gray"/>
            
            <!-- Right panel - Tabs -->
            <GroupBox Grid.Column="2" Header="Entity Designer" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TabControl Grid.Row="0">
                        <!-- Markdown tab -->
                        <TabItem Header="Markdown Source">
                            <TextBox Name="MarkdownTextBox" 
                                     Text="{Binding MarkdownContent, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     LostFocus="MarkdownTextBox_LostFocus"/>
                        </TabItem>
                        
                        <!-- C# output tab -->
                        <TabItem Header="Generated C#">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBox Grid.Row="0"
                                         Text="{Binding CSharpContent, Mode=OneWay}"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                
                                <Button Grid.Row="1" 
                                        Name="CopyButton"
                                        Content="Copy to Clipboard"
                                        HorizontalAlignment="Right"
                                        Margin="5"
                                        Padding="10,5"
                                        Click="CopyButton_Click"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Status bar -->
                    <StatusBar Grid.Row="1">
                        <StatusBarItem>
                            <TextBlock Text="{Binding SelectedEntity.Name, StringFormat='Selected: {0}'}"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>