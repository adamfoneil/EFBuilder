<Window x:Class="EFBuilder.WPF.ScaffoldingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Scaffolding" Height="350" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Database Scaffolding" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Connection String -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Content="SQL Server Connection String:" FontWeight="SemiBold"/>
            <TextBox Grid.Row="1" Name="ConnectionStringTextBox" Height="60" 
                     AcceptsReturn="True" TextWrapping="Wrap" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ToolTip="Enter your SQL Server connection string"/>
        </Grid>
        
        <!-- Example -->
        <TextBlock Grid.Row="2" Margin="0,0,0,15" Foreground="Gray" FontStyle="Italic">
            Example: Server=localhost;Database=MyDatabase;Integrated Security=true;
        </TextBlock>
        
        <!-- Options -->
        <GroupBox Grid.Row="3" Header="Options" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox Name="IncludeViewsCheckBox" Content="Include Views (not just tables)" 
                          Margin="0,5" IsChecked="False"/>
                <CheckBox Name="UseBaseTableCheckBox" Content="Use BaseTable as base class" 
                          Margin="0,5" IsChecked="True"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Progress/Status -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <ProgressBar Grid.Row="0" Name="ProgressBar" Height="20" Margin="0,0,0,10" 
                         Visibility="Collapsed"/>
            
            <ScrollViewer Grid.Row="1">
                <TextBlock Name="StatusTextBlock" TextWrapping="Wrap" 
                           FontFamily="Consolas" FontSize="11" 
                           Background="LightGray" Padding="5"/>
            </ScrollViewer>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="OkButton" Content="OK" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>