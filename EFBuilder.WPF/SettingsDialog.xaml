<Window x:Class="EFBuilder.WPF.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Code Generation Settings" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Configure code generation settings for this entity folder:" 
                   FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Settings Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Identity Type -->
            <Label Grid.Row="0" Grid.Column="0" Content="Identity Type:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,10"/>
            <TextBox Grid.Row="0" Grid.Column="1" Name="IdentityTypeTextBox" 
                     Text="{Binding IdentityType, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10" Height="25" VerticalAlignment="Top"/>
            
            <!-- Default Namespace -->
            <Label Grid.Row="1" Grid.Column="0" Content="Default Namespace:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,10"/>
            <TextBox Grid.Row="1" Grid.Column="1" Name="DefaultNamespaceTextBox" 
                     Text="{Binding DefaultNamespace, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10" Height="25" VerticalAlignment="Top"/>
            
            <!-- Base Class Namespace -->
            <Label Grid.Row="2" Grid.Column="0" Content="Base Class Namespace:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,10"/>
            <TextBox Grid.Row="2" Grid.Column="1" Name="BaseClassNamespaceTextBox" 
                     Text="{Binding BaseClassNamespace, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10" Height="25" VerticalAlignment="Top"/>
            
            <!-- DbContext Class -->
            <Label Grid.Row="3" Grid.Column="0" Content="DbContext Class:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,10"/>
            <TextBox Grid.Row="3" Grid.Column="1" Name="DbContextClassTextBox" 
                     Text="{Binding DbContextClass, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10" Height="25" VerticalAlignment="Top"/>
            
            <!-- Help Text -->
            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="Examples:" FontWeight="Bold" Margin="0,20,0,5"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="• Default Namespace: MyProject.Data" Margin="0,0,0,3"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="• Base Class Namespace: MyProject.Data.Conventions" Margin="0,0,0,3"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="• DbContext Class: MyProject.Data.MyDbContext" Margin="0,0,0,3"/>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Height="30" Margin="0,0,10,0" 
                    Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Height="30" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>